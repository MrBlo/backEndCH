extends layout
block myapp
  if loaded
    h1="Producto agregado"
  .text-bg-light.px-5.py-4.mt-5.mx-auto.border.border-dark.rounded.w-50
    form(action='/productos' method='post')
      .mb-3
        label.form-label(for='title') Titulo
        input#title.form-control(type='text' name='title' placeholder='Default input' aria-label='default input example')
      .mb-3
        label.form-label(for='price') Precio
        input#price.form-control(type='text' name='price' placeholder='590' aria-label='default input example')
      .mb-3
        label.form-label(for='thumbnail') Imagen
        input#thumbnail.form-control(type='text' name='thumbnail' placeholder='https://cdn3.iconfinder.com/data/icons/education-209/64/ruler-triangle-stationary-school-256.png' aria-label='default input example')
      button.btn.btn-primary(type='submit') Subir
